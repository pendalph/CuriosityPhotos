{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["dom", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "noEmit": true,
        "jsx": "preserve",
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "./",
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "*": ["src/*"],
            "components": ["components/*"],
            "modules": ["modules/*"],
            "screens": ["screens/*"],
            "services": ["services/*"],
            "types": ["types/*"],
            "theme": ["theme/*"],
            "config": ["config/*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
